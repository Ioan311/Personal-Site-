        <link rel="stylesheet" href="../../Resources/CSS/layout.css" type="text/css" />       
    </head>
    <body>
    <%- include("../fragments/header.ejs") %>

    <main>
        <section>
            <h2>Product page</h2>
                <article id="art-produs">
                    <h3><span class="name"><%- locals.prod.name %></span></h3>
                    <p>Price: <span class="price"><%- locals.prod.price %> </span></p>
                    <p>Description: <span class="description"><%- locals.prod.description %> </span></p>
                    <p>Material: <span class="material"><%- locals.prod.material %> </span></p>
                    <p>Continent: <span class="continent"><%- locals.prod.continent %> </span></p>
                    <p>Load: <span class="load"><%- locals.prod.load %> </span></p>
                    <p>Size: <span class="size"><%- locals.prod.size %> </span></p>
                    <p>Voucher: <span class="voucher"><%- locals.prod.apply_voucher %> </span></p>
                    <p>Date: <span class="date"><%- locals.prod.date %> </span></p>
                    <figure class="imag-produs">
                        <img  src="/Resources/Images/products/<%- locals.prod.image %>" alt="[image <%- locals.prod.name %>]" />
                    </figure>    
                </article>
            
        </section>
    </main>

    <%- include("../fragments/footer.ejs") %>
    </body>

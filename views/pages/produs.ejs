        <link rel="icon" type="image/png" sizes="32x32" href="../../Resources/Images/ico/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="../../Resources/Images/ico/favicon-16x16.png">
        <link rel="manifest" href="../../Resources/Images/ico/site.webmanifest">
